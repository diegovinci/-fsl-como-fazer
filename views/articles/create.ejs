<%- include('../header') %>
<div class="container">
  <h2>Novo Artigo</h2>
  <form method="POST" action="/articles/create">
    <div class="form-group">
      <label for="category">Título</label>
      <input class="form-control" type="text" id="title" name="title" placeholder="Insira o título" />
    </div>
    <div class="form-group">
      <label for="category">Categoria</label>
      <select class="form-control" id="category" name="category">
        <% categories.forEach((category) => { %>
          <option value="<%= category.id %>"><%= category.category %></option>
        <% }); %>
      </select>
    </div>
    <div class="form-group">
      <label for="category">Conteúdo</label>
      <textarea class="form-control" id="content" name="content" placeholder="Insira a conteúdo do artigo"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>
<%- include('../footer') %>