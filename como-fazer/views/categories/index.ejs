<%- include('../header') %>
<div class="container">
  <h2>Categorias</h2>
  <a class="btn btn-light" href="/categories/create">Nova categoria</a>
  <a class="btn btn-light" href="/articles/create">Novo artigo</a>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    <% categories.forEach((category) => { %>
      <tr>
        <td>
          <a href="/articles/category/<%= category.id %>">
            <%= category.category %>
          </a>
        <td>
          <a href="/categories/update/<%= category.id %>">Editar</a> | 
          <a href="/categories/remove/<%= category.id %>">Excluir</a>
        </td>
      </tr>
    <% }); %>
    </tbody>
  </table>
</div>
<%- include('../footer') %>